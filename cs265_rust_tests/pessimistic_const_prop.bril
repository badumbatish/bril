# RUN: cat %s | bril2json | ../target/debug/cfg_construction 
@simple_singly_block {
  a: int = const 4;
  b: int = const 2;

  # (a + b) * (a + b)
  sum1: int = add a b;
  sum2: int = add a b;
  prod1: int = mul sum1 sum2;

  # Clobber both sums.
  sum1: int = const 0;
  sum2: int = const 0;

  # Use the sums again.
  sum3: int = add a b;
  prod2: int = mul sum3 sum3;

  print prod2;
}
@if_else_block(a: int) {
  zero: int = const 0;
  is_term: bool = eq a zero;
  br is_term .cond.second .cond.first;
.cond.first:
  one: int = const 1;
  jmp .cond.finish;
.cond.second:
  one: int = const 2;
.cond.finish:
 a : int = add one zero;
}
